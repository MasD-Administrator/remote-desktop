
<MainScreen>:
    BoxLayout:
        orientation: "horizontal"

        MDNavigationRail:
            MDNavigationRailFabButton:
                icon: "cog"
                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.current = "settings"

        MDBoxLayout:
            user_list: user_list
            size_hint_x: .8

            orientation: "vertical"
            padding: 70

            MDLabel:
                id: connection_status_label
                markup: True
                font_size: "15sp"
                text: " "
                halign: "center"
                size_hint: (1,.05)

            MDLabel:
                id: username_label
                markup: True
                font_size: '25sp'
                text: "Your username [b]None[/b]"
                halign: "center"
                size_hint: (1, .1)

            BoxLayout:
                orientation: "horizontal"
                spacing: 40
                size_hint: (1, 0.2)

                MDTextField:
                    id: username_text_field
                    mode: "rectangle"
                    max_text_length: 12
                    hint_text: "Username"

                MDRectangleFlatButton:
                    font_size: "15dp"
                    text: "Connect"
                    size_hint: (.3, .75)
                    on_release: root.connect_btn_press()

            BoxLayout:
                size_hint_y: .3
                MDTextField:
                    hint_text: "Search"
                    icon_left: "magnify"

            ScrollView:
                MDList:
                    id: user_list



<SettingsScreen>:
    BoxLayout:
        orientation: "horizontal"

        MDNavigationRail:
            MDNavigationRailFabButton:
                icon: "arrow-left-bold"
                on_release:
                    root.manager.transition.direction = "right"
                    root.manager.current = "main"

        # this is sort of the main layout excepting the navigation rail
        BoxLayout:
            orientation: "horizontal"
            padding: 70

            BoxLayout:
                orientation: "vertical"

                Label:
                    markup: True
                    font_size: "20dp"
                    text: "[b]Username[/b]"
                    pos_hint: {"center_x": .2}

                # defines the username block
                GridLayout:
                    spacing: 20
                    size_hint: (.5, 1)
                    rows: 4
                    cols: 2

                    Label:
                        text: "Company"
                    TextInput:
                        id: company_name_text_input
                        max_text_length: 4
                        height: "30dp"
                        text_color: "white"

                    Label:
                        text: "Location"
                    TextInput:
                        id: location_text_input
                        height: "30dp"
                        text_color: "white"

                    Label:
                        text: "Type"
                    TextInput:
                        id: type_text_input
                        height: "30dp"
                        text_color: "white"

                    Label:
                        text: "Number"
                    TextInput:
                        id: number_text_input
                        height: "30dp"
                        text_color: "white"

                Widget:
                    size_hint_y: 1

                BoxLayout:
                    orientation: "vertical"
                    size_hint: (.45, .4)
                    padding: -30
                    Label:
                        markup: True
                        font_size: "20dp"
                        text: "[b]Restricted Mode[/b]"

                    MDSwitch:
                        pos_hint: {"center_x": .4}
                        id: restriction_mode_switch
                        active: False
                        icon_active: "check"



            GridLayout:
                spacing: 20
                cols: 3
                rows: 5

                MDRectangleFlatButton:
                    text: "Save Username"
                    on_press: root.save_username_btn_press()

                MDRectangleFlatButton:
                    text: "Save Restriction Mode"
                    on_press: root.save_restriction_mode_btn_press()


            MDRectangleFlatButton:
                text: "Save All(dev)"
                on_press: on_press: root.save_all_btn_press()
